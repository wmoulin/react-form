{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,    
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "bin",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6",
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*.ts*",
    "sample/**/*.ts*"
  ],
  "exclude": [
    "istanbul"
  ]
}